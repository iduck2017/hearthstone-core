{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "./dist/cjs",
    "module": "CommonJS",
    "lib": ["ES2018", "DOM"],
    "target": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/type",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}